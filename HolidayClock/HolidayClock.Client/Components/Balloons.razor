<div class="new-year-party">
    <div class="balloon"></div>
    <div class="balloon balloon--happy">
        <h1 class="balloon__nr">@Year[0]</h1>
    </div>
    <div class="balloon balloon--new">
        <h1 class="balloon__nr">@Year[1]</h1>
    </div>
    <div class="balloon balloon--happy">
        <h1 class="balloon__nr">@Year[2]</h1>
    </div>
    <div class="balloon balloon--new">
        <h1 class="balloon__nr">@Year[3]</h1>
    </div>
</div>

@code {
    [Parameter]
    public string Year { get; set; } = "2024";
}